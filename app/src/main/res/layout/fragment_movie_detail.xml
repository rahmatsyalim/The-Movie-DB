<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/top_appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
      app:elevation="0dp">

      <com.google.android.material.appbar.CollapsingToolbarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:collapsedTitleTextAppearance="@style/TheMovieDb.TextAppearance.ToolbarTitle.Collapsed"
         app:contentScrim="@color/brand_dark"
         app:expandedTitleTextAppearance="@style/TheMovieDb.TextAppearance.ToolbarTitle.Expanded"
         app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
         app:scrimAnimationDuration="@integer/duration_regular"
         app:scrimVisibleHeightTrigger="60dp"
         app:titleCollapseMode="fade">

         <RelativeLayout
            android:id="@+id/detail_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_collapseMode="parallax">

            <ImageView
               android:id="@+id/iv_background"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:adjustViewBounds="true"
               android:alpha="0.2"
               android:contentDescription="@string/app_name"
               android:scaleType="centerCrop" />

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_detail_fading_bottom"
               android:orientation="vertical"
               android:paddingTop="@dimen/dimen_actionBar">

               <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/dimen_regular"
                  app:layout_constraintTop_toTopOf="parent">

                  <com.google.android.material.imageview.ShapeableImageView
                     android:id="@+id/iv_poster"
                     android:layout_width="160dp"
                     android:layout_height="0dp"
                     android:scaleType="centerCrop"
                     app:layout_constraintDimensionRatio="2:3"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.CornerSmall" />

                  <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_marginStart="@dimen/dimen_regular"
                     android:orientation="vertical"
                     app:layout_constraintEnd_toEndOf="parent"
                     app:layout_constraintStart_toEndOf="@id/iv_poster"
                     app:layout_constraintTop_toTopOf="parent">

                     <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold" />

                     <TextView
                        android:id="@+id/tv_status_releaseDate_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                     <TextView
                        android:id="@+id/tv_tagline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_regular"
                        android:textStyle="italic" />

                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_regular"
                        android:orientation="horizontal">

                        <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <com.google.android.material.button.MaterialButton
                              style="@style/TheMovieDb.Styles.MaterialTextButton"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/trailer"
                              android:textSize="@dimen/text_regular"
                              app:icon="@drawable/ic_play_trailer"
                              app:iconGravity="top" />

                           <com.google.android.material.button.MaterialButton
                              style="@style/TheMovieDb.Styles.MaterialTextButton"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/overview"
                              android:textSize="@dimen/text_regular"
                              app:icon="@drawable/ic_overview"
                              app:iconGravity="top" />
                        </LinearLayout>

                        <LinearLayout
                           android:id="@+id/vote_container"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:orientation="vertical">

                           <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="@string/user_score" />

                           <RelativeLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintTop_toTopOf="parent">

                              <ProgressBar
                                 android:id="@+id/progress_bar_vote_average"
                                 android:layout_width="60dp"
                                 android:layout_height="60dp"
                                 android:indeterminateOnly="false"
                                 android:progress="70"
                                 android:progressDrawable="@drawable/circular_vote_bar_color"
                                 tools:ignore="TooDeepLayout" />

                              <TextView
                                 android:id="@+id/tv_vote_average"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_centerInParent="true"
                                 android:textSize="@dimen/text_large"
                                 android:textStyle="bold" />

                           </RelativeLayout>

                           <TextView
                              android:id="@+id/tv_vote_count"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content" />

                        </LinearLayout>

                     </LinearLayout>

                  </LinearLayout>
               </androidx.constraintlayout.widget.ConstraintLayout>

               <HorizontalScrollView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:scrollbars="none">

                  <com.google.android.material.chip.ChipGroup
                     android:id="@+id/chip_group_genre"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingHorizontal="@dimen/text_regular"
                     android:paddingVertical="@dimen/dimen_regular"
                     app:chipSpacing="@dimen/dimen_small" />
               </HorizontalScrollView>
            </LinearLayout>
         </RelativeLayout>

         <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <include layout="@layout/placeholder_movie_detail" />

         </com.facebook.shimmer.ShimmerFrameLayout>

         <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetEnd="@dimen/dimen_large"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/brand_white" />

      </com.google.android.material.appbar.CollapsingToolbarLayout>
   </com.google.android.material.appbar.AppBarLayout>

   <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
      android:id="@+id/fab_bookmark"
      style="@style/TheMovieDb.Style.ExtendedFloatingActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/dimen_regular"
      android:text="@string/bookmark"
      android:translationY="@dimen/dimen_large"
      app:icon="@drawable/ic_bookmark_default"
      app:layout_anchor="@id/top_appbar"
      app:layout_anchorGravity="bottom|end" />

   <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/top_bar"
      android:clipToPadding="false"
      android:paddingBottom="@dimen/dimen_actionBar"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="40dp"
         android:orientation="vertical">
         <!-- region Recommendations -->
         <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/placeholder_movies_horizontal" />
         </com.facebook.shimmer.ShimmerFrameLayout>

         <LinearLayout
            android:id="@+id/recommendations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/dimen_regular"
               android:text="@string/recommendations"
               android:textColor="@color/brand_white"
               android:textSize="@dimen/text_large"
               android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_recommendation_movies"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:clipToPadding="false"
               android:nestedScrollingEnabled="false"
               android:padding="@dimen/dimen_tiny" />
         </LinearLayout>
         <!-- endregion -->

         <!-- region Reviews -->
         <LinearLayout
            android:id="@+id/view_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_regular"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/dimen_regular"
               android:text="@string/reviews"
               android:textColor="@color/brand_white"
               android:textSize="@dimen/text_large"
               android:textStyle="bold" />

            <TextView
               android:id="@+id/tv_info_reviews"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/dimen_large"
               android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_reviews"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:nestedScrollingEnabled="false"
               android:paddingHorizontal="@dimen/dimen_regular"
               android:visibility="gone"
               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

         </LinearLayout>
         <!-- endregion -->

      </LinearLayout>

   </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>