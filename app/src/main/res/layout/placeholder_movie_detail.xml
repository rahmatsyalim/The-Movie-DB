<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@color/brand_dark"
   android:orientation="vertical"
   android:paddingTop="@dimen/dimen_actionBar"
   android:paddingHorizontal="@dimen/dimen_regular">

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/dimen_regular">

      <com.google.android.material.imageview.ShapeableImageView
         android:id="@+id/iv_poster"
         android:layout_width="160dp"
         android:layout_height="0dp"
         android:background="@drawable/bg_image_ph"
         android:scaleType="centerCrop"
         app:layout_constraintDimensionRatio="2:3"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.CornerSmall" />

      <LinearLayout
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginStart="@dimen/dimen_regular"
         android:orientation="vertical"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@id/iv_poster"
         app:layout_constraintTop_toTopOf="parent">

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginBottom="@dimen/dimen_regular"
            android:background="@drawable/bg_image_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="160dp"
            android:layout_height="@dimen/dimen_regular"
            android:background="@drawable/bg_image_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_image_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginTop="@dimen/dimen_large"
            android:layout_marginEnd="@dimen/dimen_extra_large"
            android:background="@drawable/bg_image_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/dimen_large"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_image_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

      </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginVertical="@dimen/dimen_regular"
      android:orientation="horizontal">

      <com.google.android.material.imageview.ShapeableImageView
         android:layout_width="70dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:background="@drawable/bg_image_ph"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

      <com.google.android.material.imageview.ShapeableImageView
         android:layout_width="60dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:layout_marginStart="@dimen/dimen_regular"
         android:background="@drawable/bg_image_ph"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

      <com.google.android.material.imageview.ShapeableImageView
         android:layout_width="80dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:layout_marginStart="@dimen/dimen_regular"
         android:background="@drawable/bg_image_ph"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />
   </LinearLayout>

</LinearLayout>