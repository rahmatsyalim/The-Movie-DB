<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/bottom_sheet_filter"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/brand_dark"
   android:paddingBottom="@dimen/space_actionBar"
   app:behavior_hideable="true"
   app:layout_behavior="@string/bottom_sheet_behavior">

   <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/iv_line"
      android:layout_width="36dp"
      android:layout_height="4dp"
      android:layout_marginTop="@dimen/space_medium"
      android:background="@color/grey"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

   <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_filter"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/space_medium"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toTopOf="@id/btn_filter"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_line" />

   <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_filter"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/filter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>