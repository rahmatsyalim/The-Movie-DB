<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/shimmer_ph_home_movie_list"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp">

      <com.google.android.material.imageview.ShapeableImageView
         android:layout_width="120dp"
         android:layout_height="18dp"
         android:background="@drawable/bg_shimmer_ph"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent" />

      <com.google.android.material.imageview.ShapeableImageView
         android:layout_width="60dp"
         android:layout_height="18dp"
         android:layout_alignParentEnd="true"
         android:background="@drawable/bg_shimmer_ph"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent" />
   </RelativeLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="5dp">

      <include layout="@layout/shimmer_ph_item_movie_home" />

      <include layout="@layout/shimmer_ph_item_movie_home" />

      <include layout="@layout/shimmer_ph_item_movie_home" />

   </LinearLayout>
</LinearLayout>