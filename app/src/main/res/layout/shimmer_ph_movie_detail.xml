<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@color/brand_dark"
   android:orientation="vertical"
   android:paddingTop="@dimen/space_actionBar"
   android:paddingHorizontal="@dimen/space_regular">

   <com.google.android.material.imageview.ShapeableImageView
      android:layout_width="240dp"
      android:layout_height="14dp"
      android:layout_marginBottom="@dimen/space_regular"
      android:background="@drawable/bg_shimmer_ph"
      app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

   <com.google.android.material.imageview.ShapeableImageView
      android:layout_width="160dp"
      android:layout_height="14dp"
      android:background="@drawable/bg_shimmer_ph"
      app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/space_large">

      <com.google.android.material.imageview.ShapeableImageView
         android:id="@+id/iv_poster"
         android:layout_width="160dp"
         android:layout_height="0dp"
         android:background="@drawable/bg_shimmer_ph"
         android:scaleType="centerCrop"
         app:layout_constraintDimensionRatio="2:3"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner6dp" />

      <LinearLayout
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginHorizontal="@dimen/space_large"
         android:orientation="vertical"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toEndOf="@id/iv_poster"
         app:layout_constraintTop_toTopOf="parent">

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_shimmer_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_shimmer_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_huge"
            android:background="@drawable/bg_shimmer_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

         <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginEnd="60dp"
            android:background="@drawable/bg_shimmer_ph"
            app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />

      </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>