<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/shimmer_ph_home_movie_list"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical">

   <include layout="@layout/shimmer_ph_home_movies_header"/>

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.imageview.ShapeableImageView
         android:id="@+id/iv_backdrop"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_marginHorizontal="40dp"
         android:layout_marginVertical="24dp"
         android:background="@drawable/bg_shimmer_ph"
         android:scaleType="centerCrop"
         app:layout_constraintDimensionRatio="16:9"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize5Percent" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>