<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:id="@+id/shimmer_ph_home_movie_list"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical">

   <include layout="@layout/placeholder_movies_horizontal_header" />

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.imageview.ShapeableImageView
         android:id="@+id/iv_backdrop"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_marginHorizontal="@dimen/dimen_large"
         android:layout_marginBottom="@dimen/dimen_large"
         android:layout_marginTop="@dimen/dimen_small"
         android:background="@drawable/bg_image_ph"
         android:scaleType="centerCrop"
         app:layout_constraintDimensionRatio="16:9"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.CornerSmall" />

   </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>