<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent">

   <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/swipe_refresh_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.core.widget.NestedScrollView
         android:id="@+id/views_container"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:clipToPadding="false"
         android:paddingBottom="@dimen/space_actionBar">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
               android:id="@+id/shimmer_in_theater"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <include layout="@layout/shimmer_ph_home_movie_carousel" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/in_theater_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">

               <RelativeLayout
                  android:id="@+id/in_theater_title_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent">

                  <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="@dimen/space_regular"
                     android:layout_toStartOf="@id/btn_more_in_theater"
                     android:text="@string/in_theater"
                     android:textSize="@dimen/text_large"
                     android:textStyle="bold" />

                  <com.google.android.material.button.MaterialButton
                     android:id="@+id/btn_more_in_theater"
                     style="@style/Widget.MaterialComponents.Button.TextButton"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     app:icon="@drawable/ic_arrow_forward"
                     app:iconGravity="textStart"
                     app:iconTint="@color/text_muted" />

               </RelativeLayout>

               <androidx.viewpager2.widget.ViewPager2
                  android:id="@+id/vp_in_theater"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:nestedScrollingEnabled="false"
                  android:paddingHorizontal="@dimen/space_large"
                  android:paddingBottom="@dimen/space_medium"
                  app:layout_constraintDimensionRatio="16:9"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/in_theater_title_container">

               </androidx.viewpager2.widget.ViewPager2>

               <com.google.android.material.tabs.TabLayout
                  android:id="@+id/tab_layout_carousel"
                  android:layout_width="match_parent"
                  android:layout_height="6dp"
                  android:background="@color/transparent"
                  app:layout_constraintBottom_toBottomOf="@id/vp_in_theater"
                  app:tabBackground="@drawable/carousel_dot_selector"
                  app:tabGravity="center"
                  app:tabIndicatorHeight="0dp"
                  app:tabMaxWidth="8dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
               android:id="@+id/shimmer_popular"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <include layout="@layout/shimmer_ph_home_movie_list" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
               android:id="@+id/popular_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">

               <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="@dimen/space_regular"
                     android:layout_toStartOf="@id/btn_more_popular"
                     android:text="@string/popular"
                     android:textSize="@dimen/text_large"
                     android:textStyle="bold" />

                  <com.google.android.material.button.MaterialButton
                     android:id="@+id/btn_more_popular"
                     style="@style/Widget.MaterialComponents.Button.TextButton"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     app:icon="@drawable/ic_arrow_forward"
                     app:iconGravity="textStart"
                     app:iconTint="@color/text_muted" />
               </RelativeLayout>

               <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_popular"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clipToPadding="false"
                  android:nestedScrollingEnabled="false"
                  android:padding="@dimen/space_tiny" />

            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
               android:id="@+id/shimmer_top_rated"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <include layout="@layout/shimmer_ph_home_movie_list" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
               android:id="@+id/top_rated_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">

               <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="@dimen/space_regular"
                     android:layout_toStartOf="@id/btn_more_top_rated"
                     android:text="@string/top_rated"
                     android:textSize="16sp"
                     android:textStyle="bold" />

                  <com.google.android.material.button.MaterialButton
                     android:id="@+id/btn_more_top_rated"
                     style="@style/Widget.MaterialComponents.Button.TextButton"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     app:icon="@drawable/ic_arrow_forward"
                     app:iconGravity="textStart"
                     app:iconTint="@color/text_muted" />
               </RelativeLayout>

               <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_topRated"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clipToPadding="false"
                  android:nestedScrollingEnabled="false"
                  android:padding="@dimen/space_tiny" />
            </LinearLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
               android:id="@+id/shimmer_upcoming"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <include layout="@layout/shimmer_ph_home_movie_list" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
               android:id="@+id/upcoming_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">

               <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginStart="@dimen/space_regular"
                     android:layout_toStartOf="@id/btn_more_upcoming"
                     android:text="@string/upcoming"
                     android:textSize="@dimen/text_large"
                     android:textStyle="bold" />

                  <com.google.android.material.button.MaterialButton
                     android:id="@+id/btn_more_upcoming"
                     style="@style/Widget.MaterialComponents.Button.TextButton"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     app:icon="@drawable/ic_arrow_forward"
                     app:iconGravity="textStart"
                     app:iconTint="@color/text_muted" />
               </RelativeLayout>

               <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_upcoming"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clipToPadding="false"
                  android:nestedScrollingEnabled="false"
                  android:padding="@dimen/space_tiny" />
            </LinearLayout>

         </LinearLayout>
      </androidx.core.widget.NestedScrollView>
   </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>