<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_marginBottom="@dimen/dimen_small"
   android:layout_weight="1"
   android:orientation="vertical"
   android:padding="@dimen/dimen_tiny">

   <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/iv_poster"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginBottom="@dimen/dimen_extra_large"
      android:background="@drawable/bg_image_ph"
      app:layout_constraintDimensionRatio="2:3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.CornerSmall" />

   <com.google.android.material.imageview.ShapeableImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dimen_regular"
      android:layout_marginTop="@dimen/dimen_small"
      android:layout_marginEnd="@dimen/dimen_large"
      android:layout_marginBottom="@dimen/dimen_tiny"
      android:background="@drawable/bg_image_ph"
      app:layout_constraintTop_toBottomOf="@id/iv_poster"
      app:shapeAppearanceOverlay="@style/TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" />
</androidx.constraintlayout.widget.ConstraintLayout>