<resources xmlns:tools="http://schemas.android.com/tools">
   <!-- Base application theme. -->
   <style name="Theme.TheMovieDb" parent="Theme.MaterialComponents.Light.NoActionBar">
      <!-- Primary brand color. -->
      <item name="colorPrimary">@color/brand_main</item>
      <item name="colorPrimaryVariant">@color/brand_main_variant</item>
      <item name="colorOnPrimary">@color/brand_white</item>
      <!-- Secondary brand color. -->
      <item name="colorSecondary">@color/brand_second</item>
      <item name="colorSecondaryVariant">@color/brand_second_variant</item>
      <item name="colorOnSecondary">@color/brand_white</item>
      <!-- Color error -->
      <item name="colorError">@color/brand_light_red</item>
      <item name="colorOnError">@color/brand_white</item>
      <!-- Components surface colors such as cards, sheets, and menus. -->
      <item name="colorSurface">@color/brand_dark</item>
      <item name="colorOnSurface">@color/brand_main</item>
      <!-- Color behind all screen -->
      <item name="android:colorBackground">@color/brand_dark</item>
      <item name="colorOnBackground">@color/grey</item>
      <!-- Customize your theme here. -->
      <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
      <item name="android:statusBarColor">@color/brand_dark</item>
      <item name="android:navigationBarColor">@color/brand_dark</item>

      <item name="fontFamily">@font/poppins_regular</item>
      <item name="android:fontFamily">@font/poppins_regular</item>
      <item name="android:textViewStyle">@style/TheMovieDb.Style.Textview</item>
      <item name="materialButtonStyle">@style/TheMovieDb.Style.Buttons</item>
      <item name="bottomSheetDialogTheme">@style/TheMovieDb.ThemeOverlay.ModalBottomSheetDialog</item>
      <item name="customFilterChip">@style/TheMovieDb.Styles.Chip.Filter</item>
      <item name="customStaticShip">@style/TheMovieDb.Styles.Chip.Static</item>
   </style>

</resources>