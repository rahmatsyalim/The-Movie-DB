<?xml version="1.0" encoding="utf-8"?>
<resources>

   <!-- Text Style -->
   <style name="TheMovieDb.Style.Textview" parent="android:Widget.TextView">
      <item name="android:textColor">@color/text_normal</item>
      <item name="android:textSize">@dimen/text_regular</item>
   </style>

   <style name="TheMovieDb.TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
      <item name="fontFamily">@font/poppins_regular</item>
      <item name="android:fontFamily">@font/poppins_regular</item>
      <item name="android:textSize">@dimen/text_regular</item>
   </style>
   <!-- endregion -->

   <!-- region Buttons Style -->
   <style name="TheMovieDb.Style.Buttons" parent="Widget.MaterialComponents.Button">
      <item name="android:textSize">@dimen/text_regular</item>
      <item name="android:textColor">@color/text_normal</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:letterSpacing">0</item>
      <item name="shapeAppearanceOverlay">@style/TheMovieDb.ShapeAppearanceOverlay.CornerRegular</item>
   </style>

   <style name="TheMovieDb.Styles.MaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
      <item name="android:textSize">@dimen/text_medium</item>
      <item name="android:textColor">@color/text_normal</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:letterSpacing">0</item>
      <item name="shapeAppearanceOverlay">@style/TheMovieDb.ShapeAppearanceOverlay.CornerRegular</item>
   </style>

   <style name="TheMovieDb.Styles.MaterialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
      <item name="android:textSize">@dimen/text_medium</item>
      <item name="android:textColor">@color/text_normal</item>
      <item name="android:textAllCaps">false</item>
      <item name="android:letterSpacing">0</item>
      <item name="shapeAppearanceOverlay">@style/TheMovieDb.ShapeAppearanceOverlay.CornerRegular</item>
   </style>

   <style name="TheMovieDb.Style.ExtendedFloatingActionButton" parent="">
      <item name="android:letterSpacing">0</item>
      <item name="android:padding">0dp</item>
      <item name="android:textColor">@color/brand_white</item>
      <item name="android:textSize">@dimen/text_medium</item>
      <item name="textAllCaps">false</item>
      <item name="iconTint">@color/brand_main</item>
      <item name="iconPadding">6dp</item>
      <item name="backgroundTint">@color/transparent</item>e
      <item name="rippleColor">@color/brand_main_ripple</item>
      <item name="android:outlineProvider">none</item>
   </style>

   <style name="TheMovieDb.Style.FloatingActionButton" parent="">
      <item name="backgroundTint">@color/brand_dark</item>
      <item name="tint">@color/brand_white</item>
      <item name="rippleColor">@color/brand_main_ripple</item>
      <item name="android:outlineProvider">none</item>
      <item name="fabSize">mini</item>
   </style>
   <!-- endregion -->

   <!-- region ShapeAppearanceOverlay -->
   <style name="TheMovieDb.ShapeAppearanceOverlay.CornerRegular" parent="">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">@dimen/dimen_regular</item>
   </style>

   <style name="TheMovieDb.ShapeAppearanceOverlay.CornerSmall" parent="">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">@dimen/dimen_small</item>
   </style>

   <style name="TheMovieDb.ShapeAppearanceOverlay.Corner50Percent" parent="">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">50%</item>
   </style>
   <!-- endregion -->

   <!-- region Toolbar tittle -->
   <style name="TheMovieDb.TextAppearance.ToolbarTitle" parent="android:TextAppearance">
      <item name="android:textColor">@color/brand_white</item>
      <item name="android:textSize">@dimen/text_large</item>
      <item name="android:textStyle">bold</item>
   </style>

   <style name="TheMovieDb.TextAppearance.ToolbarTitle.Collapsed" parent="android:TextAppearance">
      <item name="android:textColor">@color/brand_white</item>
      <item name="android:textSize">@dimen/text_large</item>
      <item name="android:textStyle">bold</item>
   </style>

   <style name="TheMovieDb.TextAppearance.ToolbarTitle.Expanded" parent="android:TextAppearance">
      <item name="android:textColor">@color/transparent</item>
      <item name="android:textSize">@dimen/text_large</item>
      <item name="android:textStyle">bold</item>
   </style>
   <!-- endregion -->

   <!-- region Bottom Sheet Dialog -->
   <style name="TheMovieDb.ThemeOverlay.ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
      <item name="bottomSheetStyle">@style/TheMovieDb.Styles.ModalBottomSheetDialog</item>
   </style>

   <style name="TheMovieDb.Styles.ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
      <item name="backgroundTint">@color/brand_dark</item>
      <item name="shapeAppearance">@style/TheMovieDb.ShapeAppearance.BottomSheet</item>
   </style>

   <style name="TheMovieDb.ShapeAppearance.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">@dimen/dimen_regular</item>
   </style>
   <!-- endregion -->

   <!-- region Chips -->
   <style name="TheMovieDb.Styles.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
      <item name="android:textAppearance">@style/TheMovieDb.TextAppearance.Body2</item>
      <item name="android:textColor">@color/text_normal</item>
      <item name="chipMinTouchTargetSize">0dp</item>
      <item name="android:padding">@dimen/dimen_regular</item>
      <item name="checkedIconTint">@color/brand_main</item>
      <item name="chipBackgroundColor">@color/transparent</item>
      <item name="chipStrokeWidth">@dimen/dimen_1dp</item>
      <item name="chipStrokeColor">@color/chip_stroke_color_state_list</item>
   </style>

   <style name="TheMovieDb.Styles.Chip.Static" parent="Widget.MaterialComponents.Chip.Filter">
      <item name="android:textAppearance">@style/TheMovieDb.TextAppearance.Body2</item>
      <item name="android:textColor">@color/text_normal</item>
      <item name="chipMinTouchTargetSize">0dp</item>
      <item name="chipBackgroundColor">@color/brand_dark</item>
      <item name="android:clickable">false</item>
      <item name="chipStrokeWidth">@dimen/dimen_1dp</item>
      <item name="chipStrokeColor">@color/text_muted</item>
   </style>
   <!-- endregion -->

   <style name="TheMovieDb.Styles.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
      <item name="android:numStars">5</item>
      <item name="android:progressBackgroundTint">@color/text_muted</item>
      <item name="android:progressTint">@color/brand_second</item>
   </style>

</resources>