<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@color/theme_background"
   android:orientation="vertical">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/dimen_large">

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.CornerSmall" />

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_centerInParent="true"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.CornerSmall" />

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_alignParentEnd="true"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.CornerSmall" />

   </RelativeLayout>

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen_regular">

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:id="@+id/poster"
         android:layout_width="160dp"
         android:layout_height="0dp"
         android:background="@drawable/placeholder_background"
         app:image_aspectRatio="2:3"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.CornerSmall" />

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginStart="@dimen/dimen_regular"
         android:layout_toEndOf="@id/poster"
         android:orientation="vertical">

         <com.syalim.themoviedb.library.customviews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginBottom="@dimen/dimen_regular"
            android:background="@drawable/placeholder_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

         <com.syalim.themoviedb.library.customviews.CustomImageView
            android:layout_width="160dp"
            android:layout_height="@dimen/dimen_regular"
            android:background="@drawable/placeholder_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

         <com.syalim.themoviedb.library.customviews.CustomImageView
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginTop="60dp"
            android:background="@drawable/placeholder_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

         <com.syalim.themoviedb.library.customviews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_regular"
            android:layout_marginTop="@dimen/dimen_large"
            android:layout_marginEnd="@dimen/dimen_extra_large"
            android:background="@drawable/placeholder_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

         <com.syalim.themoviedb.library.customviews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/dimen_large"
            android:layout_marginEnd="60dp"
            android:background="@drawable/placeholder_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

      </LinearLayout>

   </RelativeLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginHorizontal="@dimen/dimen_regular"
      android:layout_marginBottom="@dimen/dimen_large"
      android:orientation="horizontal">

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="70dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="60dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:layout_marginStart="@dimen/dimen_regular"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />

      <com.syalim.themoviedb.library.customviews.CustomImageView
         android:layout_width="80dp"
         android:layout_height="@dimen/dimen_extra_large"
         android:layout_marginStart="@dimen/dimen_regular"
         android:background="@drawable/placeholder_background"
         app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Custom.Corner50Percent" />
   </LinearLayout>

   <include layout="@layout/placeholder_movies_tvshows_horizontal" />

</LinearLayout>